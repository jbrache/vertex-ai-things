# ==============================================================================
# Gemini Enterprise CMEK Setup - Terraform Variables
# ==============================================================================
# Copy this file to terraform.tfvars and update with your values:
#   cp terraform.tfvars.example terraform.tfvars
# ==============================================================================

# Required: Your Google Cloud project ID
project_id = "your-project-id"

# Required: Globally unique name for the GCS bucket
bucket_name = "your-gemini-data-bucket"

# Multi-Region location (must be 'us' or 'eu' for Gemini Enterprise CMEK)
location = "us"

# KMS key ring name
key_ring_name = "gemini-enterprise-keyring-tf"

# KMS crypto key name
key_name = "gemini-search-key-tf"

# GCS bucket storage class
bucket_storage_class = "STANDARD"

# CMEK ID for Discovery Engine CmekConfig Resource
cmek_config_id = "default_cmek_config"

# Discovery Engine collection configuration
collection_id           = "tf-collection-id"
collection_display_name = "tf-collection-id"

# Wheather to create the data store
create_data_store = true
# Whether to trigger importing documents to the data store
# Set to true to create it automatically, or false to create it manually later
import_documents = true

# Wheather to create the engine
create_gemini_enterprise_engine = true

# Whether to enable required Google Cloud APIs
enable_apis = true

# Grant Disovery Engine SA Storage Admin (for debugging errors)
grant_ge_sa_storage_admin = true